{
  "name": "@japa/synthetic-events",
  "description": "Generate dummy/synthetic events to test a reporter",
  "version": "3.0.0-0",
  "engines": {
    "node": ">=18.16.0"
  },
  "main": "./build/index.js",
  "type": "module",
  "files": [
    "index.ts",
    "src",
    "build/src",
    "build/index.d.ts",
    "build/index.js",
    "build/index.d.ts.map"
  ],
  "exports": {
    ".": "./build/index.js"
  },
  "scripts": {
    "pretest": "npm run lint && npm run typecheck",
    "test": "c8 npm run quick:test",
    "clean": "del-cli build",
    "compile": "npm run lint && npm run clean && tsc",
    "build": "npm run compile",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "quick:test": "node --loader ts-node/esm bin/test.ts",
    "sync-labels": "github-label-sync --labels .github/labels.json japa/synthetic-events"
  },
  "devDependencies": {
    "@adonisjs/eslint-config": "^1.1.5",
    "@adonisjs/prettier-config": "^1.1.5",
    "@adonisjs/tsconfig": "^1.1.5",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@japa/core": "^8.0.0-1",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/spec-reporter": "^1.3.3",
    "@swc/core": "^1.3.66",
    "@types/node": "^18.11.19",
    "c8": "^8.0.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.33.0",
    "github-label-sync": "^2.2.0",
    "husky": "^8.0.3",
    "np": "^7.6.3",
    "prettier": "^2.8.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@japa/assert": "^1.4.1"
  },
  "peerDependencies": {
    "@japa/core": "^8.0.0-1"
  },
  "author": "virk,japa",
  "license": "MIT",
  "homepage": "https://github.com/japa/synthetic-events#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/japa/synthetic-events.git"
  },
  "bugs": {
    "url": "https://github.com/japa/synthetic-events/issues"
  },
  "keywords": [
    "japa",
    "events",
    "reporter",
    "test-reporter"
  ],
  "eslintConfig": {
    "extends": "@adonisjs/eslint-config/package"
  },
  "prettier": "@adonisjs/prettier-config",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "publishConfig": {
    "access": "public",
    "tag": "next"
  },
  "np": {
    "message": "chore(release): %s",
    "tag": "next",
    "branch": "main",
    "anyBranch": false
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "directories": {
    "test": "tests"
  }
}
